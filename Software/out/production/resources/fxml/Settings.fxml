                  <Font name="Open Sans Semibold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="addButton" layoutX="88.0" layoutY="280.0" mnemonicParsing="false" onAction="#addAnnouncement" prefHeight="35.0" prefWidth="115.0" styleClass="Button" text="ADD" textFill="WHITE">
               <font>
                  <Font name="Open Sans Semibold" size="14.0" />
               </font>
            </Button>
              <!-- LEFT PANE END -->
      
            
                  <TextArea fx:id="Announcements" layoutX="39.0" layoutY="75.0" prefHeight="179.0" prefWidth="360.0" promptText="Enter text here." style="-fx-background-color: white;" />
