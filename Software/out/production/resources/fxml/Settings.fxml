                <PasswordField fx:id="confirmPass" layoutX="61.0" layoutY="142.0" prefHeight="45.0" prefWidth="276.0" promptText="Retype New Password" style="-fx-background-radius: 0;" />
                <PasswordField fx:id="oldPass" layoutX="63.0" layoutY="77.0" prefHeight="45.0" prefWidth="276.0" promptText="Enter Old Password" style="-fx-background-radius: 0;" />
