<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: white;" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DirectoryController">
    <children>
        <!-- BACKGROUND IMAGE END -->
        <AnchorPane prefHeight="62.0" prefWidth="1000.0" style="-fx-background-color: #273A84;">
            <children>
                <Button fx:id="toggleButton" layoutX="234.0" mnemonicParsing="false" onAction="#switchToRealtime" prefHeight="62.0" prefWidth="140.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/realtimeButton.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="directoryButton" layoutX="374.0" mnemonicParsing="false" prefHeight="62.0" prefWidth="140.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="112.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/directory.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="reportsButton" layoutX="514.0" mnemonicParsing="false" onAction="#switchToReports" prefHeight="62.0" prefWidth="140.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/reports.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="SettingsButton" layoutX="654.0" mnemonicParsing="false" onAction="#switchToSettings" prefHeight="62.0" prefWidth="140.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/settings.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <ImageView fitHeight="44.0" fitWidth="163.0" layoutX="23.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/csbt.png" />
                    </image>
                </ImageView>
            <Button fx:id="logoutButton" layoutX="905.0" layoutY="1.0" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="62.0" prefWidth="69.0" styleClass="buttonLeft">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" styleClass="logoutButton">
                     <image>
                        <Image url="@../img/logout.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            </children>
        </AnchorPane>

        <!-- LEFT PANE END -->
        <!-- TABLE -->
        <TableView fx:id="directoryTable" layoutX="58.0" layoutY="125.0" prefHeight="498.0" prefWidth="896.0">
            <columns>
                <!--TableColumn fx:id="index" editable="false" maxWidth="35.0" prefWidth="27.0" resizable="false" sortable="false" text="No." /-->
                <TableColumn fx:id="BusID" minWidth="120.0" prefWidth="120.0" resizable="false" text="BUS ID" />
                <TableColumn fx:id="plate_num" minWidth="120.0" prefWidth="120.0" resizable="false" text="PLATE NO." />
                <TableColumn fx:id="company" minWidth="170.0" prefWidth="170.0" resizable="false" text="COMPANY" />
                <TableColumn fx:id="destination" minWidth="210.0" prefWidth="210.0" resizable="false" text="ROUTE" />
                <TableColumn fx:id="seat_cap" minWidth="120.0" prefWidth="120.0" resizable="false" text="CAPACITY" />
                <TableColumn fx:id="type" minWidth="130.0" prefWidth="130.0" resizable="false" text="TYPE" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>   <!-- HANi LOGO END -->
        <Button id="add" layoutX="379.0" layoutY="637.0" mnemonicParsing="false" onAction="#openAddData" prefHeight="35.0" prefWidth="115.0" styleClass="Button" text="ADD" textFill="WHITE">
         <font>
            <Font name="Open Sans Bold" size="14.0" />
         </font></Button>
        <Button id="deleteButton" layoutX="521.0" layoutY="637.0" mnemonicParsing="false" onAction="#delete" prefHeight="35.0" prefWidth="115.0" styleClass="Button" text="DELETE" textFill="WHITE">
         <font>
            <Font name="Open Sans Bold" size="14.0" />
         </font></Button>
        <TextField id="searchField" fx:id="searchField" layoutX="676.0" layoutY="83.0" prefHeight="32.0" prefWidth="265.0" promptText="Search" />
        <ImageView fitHeight="15.0" fitWidth="16.0" layoutX="915.0" layoutY="92.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/search.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
