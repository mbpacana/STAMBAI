<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ReportsController">
    <children>
        <!-- BACKGROUND IMAGE -->
        <ImageView fitHeight="711.0" fitWidth="1010.0" layoutX="-7.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/bg2.jpg" />
