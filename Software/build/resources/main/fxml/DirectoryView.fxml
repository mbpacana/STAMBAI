<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: white;" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DirectoryController">
    <children>
        <!-- BACKGROUND IMAGE END -->
        <!-- LEFT PANE -->
        <AnchorPane prefHeight="710.0" prefWidth="137.0" style="-fx-background-color: #353857; -fx-effect: dropshadow(three-password-box, rgba(0,0,0,0.8), 10, 0, 0, 0)dropshadow(three-password-box, rgba(0,0,0,0.8), 10, 0, 0, 0);">
            <children>
                <Button fx:id="reportsButton" layoutY="59.0" mnemonicParsing="false" onAction="#switchToRealtime" prefHeight="115.0" prefWidth="137.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="76.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/time2.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button fx:id="toggleButton" layoutY="289.0" mnemonicParsing="false" onAction="#switchToReports" prefHeight="115.0" prefWidth="137.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="76.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/reports.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="directoryButton" layoutY="174.0" mnemonicParsing="false" prefHeight="115.0" prefWidth="137.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="76.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/directory.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="SettingsButton" layoutY="404.0" mnemonicParsing="false" onAction="#switchToSettings" prefHeight="115.0" prefWidth="137.0" styleClass="buttonLeft">
                    <graphic>
                        <ImageView fitHeight="76.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/settings.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </children>
        </AnchorPane>
        <!-- LEFT PANE END -->
        <!-- TABLE -->
        <TableView fx:id="directoryTable" layoutX="165.0" layoutY="53.0" prefHeight="589.0" prefWidth="805.0">
            <columns>
                <!--TableColumn fx:id="index" editable="false" maxWidth="35.0" prefWidth="27.0" resizable="false" sortable="false" text="No." /-->
                <TableColumn fx:id="BusID" prefWidth="147.0" text="Bus ID" />
                <TableColumn fx:id="plate_num" prefWidth="147.0" text="Plate No" />
                <TableColumn fx:id="company" prefWidth="147.0" text="Company" />
                <TableColumn fx:id="destination" prefWidth="147.0" text="Route" />
                <TableColumn fx:id="seat_cap" prefWidth="148.0" text="Seating Capacity" />
                <TableColumn fx:id="type" prefWidth="147.0" text="Type" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>   <!-- HANi LOGO END -->
        <Button id="add" layoutX="730.0" layoutY="649.0" mnemonicParsing="false" onAction="#openAddData" prefHeight="37.0" prefWidth="108.0" styleClass="Button" text="ADD" textFill="#f8f3f3">
         <font>
            <Font name="Open Sans Bold" size="14.0" />
         </font></Button>
        <Button id="deleteButton" layoutX="849.0" layoutY="649.0" mnemonicParsing="false" onAction="#delete" prefHeight="37.0" prefWidth="114.0" styleClass="Button" text="DELETE" textFill="WHITE">
         <font>
            <Font name="Open Sans Bold" size="14.0" />
         </font></Button>
      <TextField id="searchField" fx:id="searchField" layoutX="713.0" layoutY="17.0" prefHeight="30.0" prefWidth="258.0" promptText="Search" />
        <ImageView fitHeight="12.0" fitWidth="17.0" layoutX="950.0" layoutY="26.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/search.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
